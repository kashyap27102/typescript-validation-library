{
  "name": "typescript-validation-library",
  "version": "1.0.0",
  "description": "A flexible and powerful TypeScript-first validation library for building schema-based validation in JavaScript and TypeScript applications.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "vite  build",
    "start": "tsc && node dist/examples/01.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest ",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "validation",
    "schema",
    "validation-library",
    "typescript",
    "javascript"
  ],
  "author": "Kashyap Patel",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kashyap27102/typescript-validation-library"
  },
  "dependencies": {
    "prettier": "^3.3.3"
  }
}
